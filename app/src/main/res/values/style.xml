<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <style name="textAppTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textAppNameTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <style name="textActivityTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textActivityTitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textContentTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textContentTitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textContentBodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textContentBody</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textOverlineStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textOverline</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button -->
    <style name="buttonPrimaryStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:padding">@dimen/mediumPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/roundrect_all_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="buttonErrorStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:padding">@dimen/mediumPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/roundrect_all_error</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="buttonOutlineErrorStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:padding">@dimen/mediumPadding</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:background">@drawable/roundrect_all_outline_error</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Search Field  -->
    <style name="searchBox">
        <item name="android:background">@drawable/roundrect_all_background</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/textContentBody</item>
        <item name="android:drawableRight">@drawable/ic_search</item>
        <item name="android:textColorHint">@color/darkGrey</item>
    </style>

    <!-- Input Field -->
    <style name="inputCommonBox">
        <item name="android:background">@drawable/roundrect_all_outline_grey</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/textContentBody</item>
        <item name="android:textColorHint">@color/darkGrey</item>
    </style>

    <style name="inputCommonPrimaryBox">
        <item name="android:background">@drawable/roundrect_all_outline_primary</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/textContentBody</item>
        <item name="android:textColorHint">@color/darkGrey</item>
    </style>

</resources>